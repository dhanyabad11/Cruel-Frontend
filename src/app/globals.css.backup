@import url("https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap");
@import url("https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap");
@import url("https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap");

@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
    /* Ultra Modern Color System */
    --background: #0a0a0b;
    --background-secondary: #111113;
    --background-tertiary: #1a1a1c;
    --foreground: #ffffff;
    --foreground-secondary: #e4e4e7;
    --foreground-muted: #a1a1aa;

    --card: #111113;
    --card-hover: #1a1a1c;
    --card-foreground: #ffffff;

    --primary: #6366f1;
    --primary-hover: #5b5df7;
    --primary-foreground: #ffffff;

    --secondary: #27272a;
    --secondary-hover: #3f3f46;
    --secondary-foreground: #fafafa;

    --accent: #ec4899;
    --accent-hover: #f43f5e;
    --accent-foreground: #ffffff;

    --success: #10b981;
    --success-hover: #059669;
    --warning: #f59e0b;
    --danger: #ef4444;

    --border: #27272a;
    --border-hover: #3f3f46;
    --input: #1a1a1c;
    --ring: #6366f1;
    --radius: 16px;

    /* Premium Shadows & Effects */
    --shadow-glass: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
    --shadow-glow: 0 0 20px rgba(99, 102, 241, 0.3);
    --shadow-brutal: 8px 8px 0px 0px rgba(99, 102, 241, 1);
    --shadow-elegant: 0 25px 50px -12px rgba(0, 0, 0, 0.5);

    /* Stunning Gradients */
    --gradient-primary: linear-gradient(135deg, #6366f1 0%, #ec4899 50%, #f59e0b 100%);
    --gradient-dark: linear-gradient(135deg, #0a0a0b 0%, #111113 50%, #1a1a1c 100%);
    --gradient-glass: linear-gradient(
        135deg,
        rgba(255, 255, 255, 0.1) 0%,
        rgba(255, 255, 255, 0.05) 100%
    );
    --gradient-mesh: radial-gradient(at 40% 20%, #6366f1 0px, transparent 50%),
        radial-gradient(at 80% 0%, #ec4899 0px, transparent 50%),
        radial-gradient(at 0% 50%, #10b981 0px, transparent 50%);
}

* {
    border-color: var(--border);
}

body {
    color: var(--foreground);
    background: var(--background);
    background-image: var(--gradient-mesh);
    font-family: "Inter", "Space Grotesk", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
        "Helvetica Neue", Arial, sans-serif;
    font-weight: 400;
    line-height: 1.6;
    letter-spacing: -0.01em;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-rendering: optimizeLegibility;
    min-height: 100vh;
    position: relative;
}

body::before {
    content: "";
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--gradient-mesh);
    opacity: 0.3;
    z-index: -1;
    pointer-events: none;
}

/* Typography System */
h1,
h2,
h3,
h4,
h5,
h6 {
    font-family: "Poppins", "Inter", sans-serif;
    font-weight: 600;
    line-height: 1.3;
    letter-spacing: -0.02em;
    color: var(--foreground);
    margin: 0;
}

h1 {
    font-size: 2.5rem;
    font-weight: 700;
}
h2 {
    font-size: 2rem;
    font-weight: 600;
}
h3 {
    font-size: 1.5rem;
    font-weight: 600;
}
h4 {
    font-size: 1.25rem;
    font-weight: 500;
}
h5 {
    font-size: 1.125rem;
    font-weight: 500;
}
h6 {
    font-size: 1rem;
    font-weight: 500;
}

p {
    font-family: "Inter", sans-serif;
    font-weight: 400;
    line-height: 1.7;
    color: var(--muted-foreground);
    margin: 0;
}

/* Ultra Modern Component System */
.btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    white-space: nowrap;
    border-radius: var(--radius);
    font-size: 0.875rem;
    font-weight: 600;
    font-family: "Space Grotesk", "Inter", sans-serif;
    transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    outline: none;
    border: 1px solid transparent;
    cursor: pointer;
    text-decoration: none;
    letter-spacing: -0.01em;
    position: relative;
    overflow: hidden;
    backdrop-filter: blur(20px);
}

.btn::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s;
}

.btn:hover::before {
    left: 100%;
}

.btn:focus-visible {
    outline: 2px solid var(--ring);
    outline-offset: 2px;
    box-shadow: var(--shadow-glow);
}

.btn:disabled {
    pointer-events: none;
    opacity: 0.5;
    opacity: 0.5;
}

.btn-primary {
    background: var(--gradient-primary);
    color: var(--primary-foreground);
    padding: 0.75rem 2rem;
    min-height: 3rem;
    box-shadow: var(--shadow-elegant);
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.btn-primary:hover {
    transform: translateY(-2px) scale(1.02);
    box-shadow: var(--shadow-glow);
    filter: brightness(1.1);
}

.btn-secondary {
    background: var(--card);
    color: var(--card-foreground);
    border: 1px solid var(--border);
    padding: 0.75rem 2rem;
    min-height: 3rem;
    backdrop-filter: blur(20px);
}

.btn-secondary:hover {
    background: var(--card-hover);
    box-shadow: var(--shadow-glass);
    transform: translateY(-1px);
    border-color: var(--border-hover);
}

.btn-ghost {
    background: transparent;
    color: var(--foreground-secondary);
    padding: 0.75rem 1.5rem;
    min-height: 2.5rem;
    border: 1px solid transparent;
}

.btn-ghost:hover {
    background: var(--secondary);
    color: var(--foreground);
    border-color: var(--border);
}

.btn-danger {
    background: var(--danger);
    color: white;
    padding: 0.75rem 1.5rem;
    min-height: 2.5rem;
    box-shadow: var(--shadow);
}

.btn-danger:hover {
    background: var(--danger);
    filter: brightness(0.9);
    transform: translateY(-1px);
    box-shadow: var(--shadow-lg);
}

.btn-success {
    background: var(--success);
    color: white;
    padding: 0.75rem 1.5rem;
    min-height: 2.5rem;
    box-shadow: var(--shadow);
}

.btn-success:hover {
    background: var(--success-hover);
    transform: translateY(-1px);
    box-shadow: var(--shadow-lg);
}

.btn-outline {
    border: 1px solid var(--border);
    background: transparent;
    color: var(--foreground);
    padding: 0.625rem 1.5rem;
    min-height: 2.5rem;
}

.btn-outline:hover {
    background: var(--accent);
    box-shadow: var(--shadow);
}

.btn-sm {
    font-size: 0.75rem;
    padding: 0.5rem 1rem;
    min-height: 2rem;
}

.btn-lg {
    font-size: 1rem;
    padding: 0.75rem 2rem;
    min-height: 3rem;
}

/* Stunning Glass Card System */
.card {
    border-radius: var(--radius);
    border: 1px solid var(--border);
    background: var(--card);
    color: var(--card-foreground);
    box-shadow: var(--shadow-glass);
    transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    overflow: hidden;
    backdrop-filter: blur(20px);
    position: relative;
}

.card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: var(--gradient-primary);
    opacity: 0;
    transition: opacity 0.3s ease;
}

.card:hover {
    box-shadow: var(--shadow-elegant);
    transform: translateY(-4px) scale(1.01);
    border-color: var(--border-hover);
    background: var(--card-hover);
}

.card:hover::before {
    opacity: 1;
}

.card-header {
    padding: 2rem;
    border-bottom: 1px solid var(--border);
    background: var(--gradient-glass);
    backdrop-filter: blur(20px);
}

.card-content {
    padding: 2rem;
    position: relative;
}

.card-footer {
    padding: 1.5rem 2rem;
    border-top: 1px solid var(--border);
    background: var(--muted);
}

.card-title {
    font-size: 1.25rem;
    font-weight: 600;
    font-family: "Poppins", sans-serif;
    color: var(--card-foreground);
    line-height: 1.4;
    margin-bottom: 0.5rem;
}

.card-description {
    color: var(--muted-foreground);
    font-size: 0.875rem;
    line-height: 1.6;
}

/* Futuristic Input System */
.input {
    flex: 1;
    min-width: 0;
    border-radius: var(--radius);
    border: 1px solid var(--border);
    background: var(--input);
    padding: 1rem 1.5rem;
    font-size: 0.875rem;
    font-family: "Space Grotesk", "Inter", sans-serif;
    font-weight: 400;
    line-height: 1.5;
    color: var(--foreground);
    transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    min-height: 3rem;
    box-shadow: var(--shadow-glass);
    backdrop-filter: blur(20px);
    position: relative;
}

.input::placeholder {
    color: var(--foreground-muted);
    font-weight: 300;
}

.input:focus {
    outline: none;
    border-color: var(--primary);
    box-shadow: var(--shadow-glow);
    transform: translateY(-1px);
    background: var(--background-secondary);
}

.input:hover {
    border-color: var(--border-hover);
    transform: translateY(-1px);
}

.input:disabled {
    cursor: not-allowed;
    opacity: 0.4;
    transform: none;
}

/* Navigation Enhancement */
.nav {
    backdrop-filter: blur(10px);
    background: color-mix(in srgb, var(--background) 90%, transparent);
    border-bottom: 1px solid color-mix(in srgb, var(--border) 50%, transparent);
}

/* Animations */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes slideIn {
    from {
        transform: translateX(-10px);
        opacity: 0;
    }
    to {
        transform: translateX(0);
        opacity: 1;
    }
}

.animate-fade-in {
    animation: fadeIn 0.5s ease-out;
}

.animate-slide-in {
    animation: slideIn 0.3s ease-out;
}

/* Utility Classes */
.text-gradient {
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
}

.glass {
    background: color-mix(in srgb, var(--card) 80%, transparent);
    backdrop-filter: blur(10px);
    border: 1px solid color-mix(in srgb, var(--border) 50%, transparent);
}

/* Responsive Typography */
@media (max-width: 640px) {
    h1 {
        font-size: 2rem;
    }
    h2 {
        font-size: 1.75rem;
    }
    h3 {
        font-size: 1.375rem;
    }
    body {
        font-size: 0.875rem;
    }
}

/* Dark mode support placeholder */
@media (prefers-color-scheme: dark) {
    :root {
        --background: #020617;
        --foreground: #f8fafc;
        --card: #0f172a;
        --card-foreground: #f8fafc;
        --muted: #1e293b;
        --muted-foreground: #94a3b8;
        --border: #334155;
    }
}

@media (prefers-color-scheme: dark) {
    :root {
        --background: #0a0a0a;
        --foreground: #fafafa;
        --card: #171717;
        --card-foreground: #fafafa;
        --popover: #171717;
        --popover-foreground: #fafafa;
        --primary: #fafafa;
        --primary-foreground: #0a0a0a;
        --secondary: #262626;
        --secondary-foreground: #fafafa;
        --muted: #262626;
        --muted-foreground: #a3a3a3;
        --accent: #262626;
        --accent-foreground: #fafafa;
        --destructive: #dc2626;
        --destructive-foreground: #fafafa;
        --border: #262626;
        --input: #262626;
        --ring: #d4d4d8;
    }
}

* {
    border-color: var(--border);
}

html {
    scroll-behavior: smooth;
    font-feature-settings: "rlig" 1, "calt" 1;
}

body {
    background: var(--background);
    color: var(--foreground);
    font-family: "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI", system-ui, sans-serif;
    font-feature-settings: "rlig" 1, "calt" 1, "ss01" 1;
    line-height: 1.5;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-rendering: optimizeLegibility;
}

/* Typography */
h1,
h2,
h3,
h4,
h5,
h6 {
    color: var(--foreground);
    font-weight: 600;
    line-height: 1.2;
    letter-spacing: -0.025em;
    margin: 0;
}

h1 {
    font-size: 2.25rem;
    font-weight: 700;
    letter-spacing: -0.03em;
}

h2 {
    font-size: 1.875rem;
    font-weight: 600;
}

h3 {
    font-size: 1.5rem;
    font-weight: 600;
}

p {
    color: var(--muted-foreground);
    line-height: 1.6;
    margin: 0;
}

/* Modern Button System */
.btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-weight: 500;
    font-size: 0.875rem;
    line-height: 1;
    white-space: nowrap;
    border-radius: var(--radius);
    transition: all 0.15s ease;
    cursor: pointer;
    border: none;
    text-decoration: none;
    outline: none;
    user-select: none;
    position: relative;
    overflow: hidden;
}

.btn-primary {
    background: var(--primary);
    color: var(--primary-foreground);
    padding: 0.75rem 1.5rem;
    box-shadow: var(--shadow-sm);
}

.btn-primary:hover {
    background: #262626;
    box-shadow: var(--shadow);
}

.btn-secondary {
    background: var(--secondary);
    color: var(--secondary-foreground);
    padding: 0.75rem 1.5rem;
    border: 1px solid var(--border);
    box-shadow: var(--shadow-sm);
}

.btn-secondary:hover {
    background: #f0f0f0;
    border-color: #d4d4d4;
}

.btn-ghost {
    background: transparent;
    color: var(--foreground);
    padding: 0.5rem 1rem;
}

.btn-ghost:hover {
    background: var(--accent);
}

.btn-success {
    background: #10b981;
    color: white;
    padding: 0.5rem 1rem;
    box-shadow: var(--shadow-sm);
}

.btn-success:hover {
    background: #059669;
}

.btn-danger {
    background: #ef4444;
    color: white;
    padding: 0.5rem 1rem;
    box-shadow: var(--shadow-sm);
}

.btn-danger:hover {
    background: #dc2626;
}

/* Card System */
.card {
    background: var(--card);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    padding: 1.5rem;
    box-shadow: var(--shadow-sm);
    transition: all 0.2s ease;
}

.card:hover {
    box-shadow: var(--shadow);
    border-color: #d4d4d4;
}

/* Input System */
.input {
    width: 100%;
    padding: 0.75rem 1rem;
    border: 1px solid var(--border);
    border-radius: var(--radius);
    background: var(--input);
    color: var(--foreground);
    font-size: 0.875rem;
    line-height: 1.25;
    transition: all 0.15s ease;
    outline: none;
}

.input:focus {
    border-color: var(--ring);
    box-shadow: 0 0 0 2px rgb(0 0 0 / 0.1);
}

.input::placeholder {
    color: var(--muted-foreground);
}

.label {
    display: block;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--foreground);
    margin-bottom: 0.375rem;
}

/* Layout */
.container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
}

.page-container {
    min-height: 100vh;
    padding: 2rem 1rem;
}

@media (min-width: 640px) {
    .page-container {
        padding: 3rem 1.5rem;
    }
}

@media (min-width: 1024px) {
    .page-container {
        padding: 4rem 2rem;
    }
}

/* Animations */
.animate-fade-in {
    animation: fadeIn 0.4s ease-out forwards;
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(8px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.animate-slide-up {
    animation: slideUp 0.3s ease-out forwards;
}

@keyframes slideUp {
    from {
        opacity: 0;
        transform: translateY(12px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Loading animations */
.loading-dots::after {
    content: "";
    animation: loadingDots 1.5s infinite;
}

@keyframes loadingDots {
    0%,
    20% {
        content: "";
    }
    40% {
        content: ".";
    }
    60% {
        content: "..";
    }
    80%,
    100% {
        content: "...";
    }
}

/* Custom scrollbar */
::-webkit-scrollbar {
    width: 6px;
}

::-webkit-scrollbar-track {
    background: #f1f1f1;
}

::-webkit-scrollbar-thumb {
    background: #c1c1c1;
    border-radius: 3px;
}

::-webkit-scrollbar-thumb:hover {
    background: #a8a8a8;
}
